<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="todoInView"
            type="com.gabortrajtler.whattodo.database.WhatTodo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/add_todo_edit"
            android:layout_width="252dp"
            android:layout_height="47dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="@string/enter_todo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/add_todo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/add_todo_edit"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/todos_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin30"
            app:layout_constraintTop_toBottomOf="@+id/add_todo_edit">

            <TextView
                android:id="@+id/todos_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin30"
                android:layout_marginTop="@dimen/margin15"
                android:layout_marginEnd="@dimen/margin30"
                android:text="@={todoInView.todoText}" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>